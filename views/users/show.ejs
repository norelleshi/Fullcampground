<% include ../partials/header %>

<div class="container">
     <div class="row py-2">
        <div class="col-md-4">
            <div class="d-flex justify-content-center">
                <div class="card avatarCard">
                    <img src="<%= user.avatar %>" style="max-width: 250px;" class="card-img-top" alt="user profile image">
                </div>
            </div>
            <div>
                <% if(currentUser && user._id.equals(currentUser._id)){ %>
                    <form>
                    <!--<form action="/campgrounds" method="POST" enctype="multipart/form-data">-->
                        <div class="form-group">
                            <label for="image">Edit your avatar:</label>
                            <input class="form-control-file" type="file" name="image" id="image" accept="image/*">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-warning btn-block">Update</button>
                        </div>                
                    <!--</form> -->
                    </form>
                <% } %>
            </div>
        </div>
        
        <div class="col-md-8">
            <h5 class="card-title"><%= user.username %>'s campgrounds:</h5>
            <ul class="pb-2">
                <% campgrounds.forEach(function(campground){ %>
                    <li>
                        <a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>
</div>
<% include ../partials/footer %>