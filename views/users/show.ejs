<% include ../partials/header %>
<div id="main">
<div class="container">
     <div class="row py-2">
        <div class="col-md-4">
            <div class="d-flex justify-content-center">
                <div class="card">
                    <a href="<%= user.avatar %>">
                        <img src="<%= user.avatar %>" class="card-img-top avatarCard" alt="user profile image">
                    </a>
                </div>
            </div>
                <p><a href="mailto:<%= user.email %>"><%= user.email %></a></p>
            <div>
                <% if(currentUser && user._id.equals(currentUser._id)){ %>
                    <form>
                    <!--<form action="/campgrounds" method="POST" enctype="multipart/form-data">-->
                        <div class="form-group">
                            <!--<label for="image">Edit your avatar:</label>-->
                            <input class="form-control-file" type="file" name="image" id="image" accept="image/*">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-warning btn-block">Update</button>
                        </div>                
                    <!--</form> -->
                    </form>
                <% } %>
            </div>
            <!--<p>Bio</p>-->
        </div>
        
        <div class="col-md-8 p-0">
            <h3 class="pl-2 py-1"><%= user.username %>'s campgrounds:</h3>
            <hr>
            <% if(campgrounds.length < 1){ %>
                <p class="pl-2">No campgrounds yet.</p>
            <% } %>
            <ul class="pb-2">
                <% campgrounds.forEach(function(campground){ %>
                    <li>
                        <h5 class="font-weight-light campgroundList"><a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a></h5>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>
</div>
</div>
<% include ../partials/footer %>