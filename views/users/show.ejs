<% include ../partials/header %>

<div class="container">
    <div class="card mt-3 avatarCard pb-5">
      <div class="row no-gutters">
        <div class="col-md-4">
            <img src="<%= user.avatar %>" class="card-img" alt="user profile image">
            <% if(currentUser && user._id.equals(currentUser._id)){ %>
                <form>
                <!--<form action="/campgrounds" method="POST" enctype="multipart/form-data">-->
                    <div class="form-group">
                        <label for="image">Edit your avatar:</label>
                        <input class="form-control-file" type="file" name="image" id="image" accept="image/*">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-warning btn-block">Update</button>
                    </div>                
                <!--</form> -->
                </form>
            <% } %>
            
            
        </div>
        <div class="col-md-8">
          <div class="card-body px-2">
            <h5 class="card-title"><%= user.username %>'s campgrounds:</h5>
            <ul class="pb-2">
                <% campgrounds.forEach(function(campground){ %>
                    <li>
                        <a href="/campgrounds/<%= campground.id %>"><%= campground.name %></a>
                    </li>
                <% }); %>
            </ul>
          </div>
        </div>
      </div>
    </div>
</div>
<% include ../partials/footer %>