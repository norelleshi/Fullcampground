<% include ../partials/header %>
<div id="main">
    <div>
    <div class="container"> 
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <h4 class="p-2 m-0 text-success font-weight-normal">Create a New Campground</h4>
            </div>
            <div class="col-md-9 text-white">
                <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                    <div class="row">
						<div class="col pr-0">
							<div class="form-group input-group-sm m-0">
								<label for="name" class="m-0">Name*</label>
								<input class="form-control" type="text" name="campground[name]" id="name" placeholder="Yosemite National Park" required autofocus>
							</div>
						</div>
						<div class="col pl-1">
							<div class="form-group m-0">
								<label for="price" class="m-0">Price (per night)*</label>
								<div class="input-group input-group-sm">									
									<input class="form-control" type="number" name="campground[price]" id="price" placeholder="23.5" min="0" step="0.01" required>
									<div class="input-group-append">
										<span class="input-group-text bg-dark text-light border border-left-0 border-secondary">USD</span>
									</div>
								</div>
							</div>
						</div>
					</div>
                    <div class="form-group input-group-sm mt-1 mb-0 row">
						<div class="col-auto">													
                        	<label for="image" class="m-0">Image*</label>
                        </div>
						<div class="col-auto">
							<input class="form-control-file bg-transparent" type="file" name="image" id="image" accept="image/*" required>
                    	</div>
                    </div>
                    <div class="form-group input-group-sm m-0">
                        <label for="location" class="m-0">Location*</label>
                        <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, California, USA" required>
                    </div>
                    <div class="form-group mt-0 mb-1">
                        <label for="description" class="m-0">Description*</label>
                        <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="Yosemite National Park is famed for its giant, ancient sequoia trees, and..." rows="4" cols="80" required></textarea>
                    </div>
                    <div class="form-group mt-0">
                        <button class="btn btn-md btn-success btn-block">POST</button>
                    </div>                
                </form>  
            </div>
        </div>
    </div>
    </div>
</div>
<% include ../partials/footer %>
