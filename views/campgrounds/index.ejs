<% include ../partials/header %>
<div id="main"> 
    <div class="darkBg pt-1">
        <div class="container px-1">
            <div class="darkTransparentBg">
				<% if(matchResult !== null){ %>
					<h5 class="mb-3 pl-1"><%= matchResult %> <em><%= searchInput %></em></h5>
				<% } %>
            </div>
            <div class="mb-1 d-flex justify-content-end">
				<a id="uniform" href="#" class="displayMode m-0 px-1 py-0">Uniform mode</a>
				<a id="waterfall" href="#" class="displayMode m-0 px-1 py-0">Waterfall mode</a>
			</div>
			<div class="card-columns">
                <% campgrounds.reverse().forEach(function(campground){ %>
                    <a href="/campgrounds/<%= campground._id %>" title="<%= campground.name %>" class="index-camp-card">
                        <div class="card IndexCardBg mb-2">
                            <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
                            <div class="card-body py-0">
                                <div class="card-title text-white text-left m-0"><%= campground.name %></div>    
                                <div class="oneLineHiden py-0 text-white-50 text-left"><em><%= campground.author.username %></em></div>    
                                <div class="starLineHeight text-center pb-0 text-white">    
                                    <span class="<% if (campground.rating > 0.5) { %>fas fa-star checked <% } else { %> far fa-star uncheckedStar <% } %>"></span>
                                    <span class="<% if (campground.rating > 1.5) { %>fas fa-star checked <% } else { %> far fa-star uncheckedStar <% } %>"></span>
                                    <span class="<% if (campground.rating > 2.5) { %>fas fa-star checked <% } else { %> far fa-star uncheckedStar <% } %>"></span>
                                    <span class="<% if (campground.rating > 3.5) { %>fas fa-star checked <% } else { %> far fa-star uncheckedStar <% } %>"></span>
                                    <span class="<% if (campground.rating > 4.5) { %>fas fa-star checked <% } else { %> far fa-star uncheckedStar <% } %>"></span>
                                    <span class="font-weight-bold"><%= campground.rating.toFixed(1) %></span>
                                    <span>(<%= campground.reviews.length %>)</span>
                                </div>
								<% if(campground.price != 0){ %>
                                	<div class="text-right text-white-50 oneLineHiden">$ <%= campground.price %> USD/night</div>
                            	<% } %>
								<% if(campground.price == 0){ %>
									<div class="text-right text-success">Free Area</div>
								<% } %>
							</div>
                        </div>
                    </a>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
