<% include ../partials/header %>

    <header class="jumbotron mb-3 pt-5">
        <div class="container lead">
            <h1 class="display-4">Explore for a day</h1>
            <p class="d-none d-md-block">YumCamp is a web app that you can share your special story and experience with others. Simply post some stunning pictures and descript it by clicking the add button below. You can also find other amazing spots that people share on our platform! Start your journey here!</p>
            <hr class="my-4" style="border-color: white;">
            <p>Share your trip experiense with people from all over the world! </p>
            <p>
                <a class="btn btn-success btn-lg" href="/campgrounds/new">Add New Campground <i class="fas fa-angle-right text-white"></i></a>
            </p>
        </div>
    </header>

<main> 
    <div class="container">
        <div class="text-right">
            <input type="text" class="searchBorder border-0">
            <a href="#"><i class="fas fa-search"></i></a>
        </div>
        <div class="text-center m-5 intro_title">
            <p>Start your advanture today!</p>
            <a href="#">My Campgrounds <i class="fas fa-angle-double-right"></i></a>
        </div>
    </div>
    
    <div class="bg-light pt-4">
        <div class="container">
            <div class="row text-center pb-4" id="campground-grid">
                <% campgrounds.forEach(function(campground){ %>
                <div class="col-6 col-md-4 mb-2 p-1">
                    <div class="card">
                        <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
                        <div class="card-body camp_name">
                            <!--<h5 class="card-title camp_name"><%= campground.name %></h5>-->
                            <a href="/campgrounds/<%= campground._id %>" class="card-title"><i class="fas fa-hand-point-right pr-2 text-success"></i><%= campground.name %></a>    
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
    
    <div class="bg-success m-0 p-4">
        <div class="container">
            <a href="#" class="font-weight-lighter text-white">More from YC News<i class="fas fa-angle-right text-white pl-2"></i></a>
        </div>    
    </div>
    
</main>

<% include ../partials/footer %>