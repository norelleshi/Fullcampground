<% include ./partials/header %>
<div id=main>
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <form class="form-signin" action="/register" method="POST" enctype="multipart/form-data">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Please sign up</h1>
                    <!-- <div class="form-group input-group-sm"> -->
                        <label for="inputUsername" class="sr-only">Username</label>
                        <input type="text" id="inputUsername" class="form-control" 
                            name="username" placeholder="Username*" required autofocus>
                    <!-- </div> -->
                    
                    <!-- <div class="form-group input-group-sm"> -->
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" id="inputPassword" class="form-control rounded-0" 
                            name="password" placeholder="Password*" required>
                    <!-- </div> -->
                    
                    <!-- <div class="form-group input-group-sm">         -->
                        <label for="inputEmail" class="sr-only">Email</label>
                        <input type="email" id="inputEmail" class="form-control" 
                            name="email" placeholder="Email">
                    <!-- </div> -->
                    
                    <!-- <div class="form-group input-group-sm">         -->
                        <label for="inputAvatar" class="m-0">Avatar:</label>
                        <input type="file" id="inputAvatar" class="form-control-file bg-transparent" 
                            name="avatar" placeholder="avatar:" accept="image/*">
                    <!-- </div>         -->
                    
                    <div class="input-group-sm my-2">
                        <label for="inputAdmin" class="sr-only">Admin Code</label>
                        <input type="password" id="inputAdmin" class="form-control rounded-sm" 
                            name="adminCode" placeholder="Admin Code (for administator)">
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-md btn-success btn-block" type="submit">Join</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<% include ./partials/footer %>