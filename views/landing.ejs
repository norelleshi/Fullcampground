<% include ./partials/header %>

<div class="landingHeader lead m-0 p-3 rounded-0">
    <div class="container lead">
        <h1 class="landingTitle mb-0 text-center">Your Campground Collector</h1>
        <p class="mb-0">YelpCamp is a responsive web app for camping lovers to exchange their campground information. 
			Login to share your campgrounds with people from all over the world!</p>
        <!-- <hr class="my-4 border-white"> -->
		<div class="row justify-content-center">
            <div class="col-md-12 text-center">
				<form class="form-signin" action="/" method="POST">
				  <label for="inputUsername" class="sr-only">Username</label>
				  <input type="text" id="inputUsername" class="form-control transSignin" name="username" placeholder="Username" required autofocus>
				  <label for="inputPassword" class="sr-only">Password</label>
				  <input type="password" id="inputPassword" class="form-control transSignin" name="password" placeholder="Password" required>
				  <button class="btn btn-md btn-success btn-block mt-2" type="submit">Login</button>
				</form>
				<div class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
					<span>Need an account?</span>
					<a href="/register" class="text-light font-weight-normal">Join free</a>
				</div>
			</div>
			<div>
				<a href="/campgrounds" class="badge badge-pill badge-light shadow-lg text-nowrap"> <i class="fas fa-arrow-circle-right"></i> View all campgrounds</a>	
			</div>
		</div>
		
